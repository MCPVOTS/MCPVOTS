# AI-Driven Development Setup for MCPVots
# Configuration for Claude Opus 4 integration and automated updates

# GitHub Configuration
GITHUB_REPO="kabrony/MCPVots"
GITHUB_OWNER="kabrony"
GITHUB_TOKEN_FILE=".env.github"
MAIN_BRANCH="main"
AI_BRANCH_PREFIX="ai-updates"
PR_BRANCH_PREFIX="feature/ai"

# AI Development Settings
AI_COMMIT_AUTHOR="Claude Opus 4 <opus4@anthropic.com>"
AI_COMMIT_SIGNATURE="Signed-off-by: Claude Opus 4 AI Assistant"
AUTO_MERGE_ENABLED=true
AUTO_DEPLOY_ENABLED=true
REVIEW_REQUIRED=false

# Workflow Settings
AUTO_TEST_ON_PUSH=true
AUTO_BUILD_ON_PR=true
AUTO_DEPLOY_ON_MERGE=true
ROLLBACK_ENABLED=true
MONITORING_ENABLED=true

# Security Settings
BRANCH_PROTECTION=true
REQUIRED_STATUS_CHECKS=true
RESTRICT_PUSHES=false
ALLOW_FORCE_PUSHES=false
ALLOW_DELETIONS=false

# Notification Settings
SLACK_WEBHOOK_URL=""
DISCORD_WEBHOOK_URL=""
EMAIL_NOTIFICATIONS=true

# Backup Settings
AUTO_BACKUP=true
BACKUP_FREQUENCY="daily"
RETENTION_DAYS=30

# Development Environment
NODE_VERSION="18.x"
PYTHON_VERSION="3.11"
DEPLOYMENT_TARGET="production"

export GITHUB_REPO GITHUB_OWNER MAIN_BRANCH AI_BRANCH_PREFIX PR_BRANCH_PREFIX
export AI_COMMIT_AUTHOR AI_COMMIT_SIGNATURE AUTO_MERGE_ENABLED AUTO_DEPLOY_ENABLED
export AUTO_TEST_ON_PUSH AUTO_BUILD_ON_PR AUTO_DEPLOY_ON_MERGE ROLLBACK_ENABLED
export BRANCH_PROTECTION REQUIRED_STATUS_CHECKS MONITORING_ENABLED
